<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="io.asgardeo.tomcat.saml.agent.sample"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
        <servlet-name>ApplicationServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.opensaml4WebprofileDemo.app.ApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleSignOnService</servlet-name>
        <servlet-class>no.steras.opensamlSamples.opensaml4WebprofileDemo.idp.SingleSignOnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsumerServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.opensaml4WebprofileDemo.sp.ConsumerServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>ArtifactResolutionServlet</servlet-name>
        <servlet-class>no.steras.opensamlSamples.opensaml4WebprofileDemo.idp.ArtifactResolutionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ApplicationServlet</servlet-name>
        <url-pattern>/app/appservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleSignOnService</servlet-name>
        <url-pattern>/idp/singleSignOnService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsumerServlet</servlet-name>
        <url-pattern>/sp/consumer</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>ArtifactResolutionServlet</servlet-name>
        <url-pattern>/idp/artifactResolutionService</url-pattern>
    </servlet-mapping>

	<filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>no.steras.opensamlSamples.opensaml4WebprofileDemo.sp.AccessFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>

    <security-role>
		<role-name>superadmin</role-name>
    </security-role>
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>customer</role-name>
	</security-role>

    <security-constraint>
		<web-resource-collection>
			<web-resource-name>SuperAdmin Auth</web-resource-name>
      			<url-pattern>/webapp/Users/SuperAdmin/SuperAdmin.jsp</url-pattern>
				<url-pattern>/webapp/BookOperations/*</url-pattern> 
				<url-pattern>/webapp/OrderOperations/*</url-pattern> 
				<url-pattern>/webapp/UserOperations/*</url-pattern> 
    			<url-pattern>/webapp/BookOperations/FilterBooks.jsp</url-pattern> 
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>superadmin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
    </security-constraint>

    <security-constraint>
		<web-resource-collection>
			<web-resource-name>Admin auth</web-resource-name>
      			<url-pattern>/webapp/Users/Admin/Admin.jsp</url-pattern>
				<url-pattern>/webapp/BookOperations/FilterBooks.jsp</url-pattern>
      			<http-method>GET</http-method>
				<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>superadmin</role-name>
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

    <security-constraint>
		<web-resource-collection>
			<web-resource-name>Customer auth</web-resource-name>
			<url-pattern>/webapp/BookOperations/FilterBooks.jsp</url-pattern>
     		<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>customer</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>  

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/webapp/Login.jsp</form-login-page>
			<form-error-page>/webapp/Login-fail.jsp</form-error-page>
		</form-login-config>
	</login-config>

   <resource-ref>
        <description>MySQL JDBC</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.JDBC</res-type>
    </resource-ref>


